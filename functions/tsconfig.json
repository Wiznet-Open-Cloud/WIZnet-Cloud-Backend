    "lib": ["es6", "esnext.asynciterable"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "lib",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}

